<div class="banner-lw" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1500759285222-a95626b934cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container align-items-center">


    <h1 class="pb-2">Discover the city from a new perspective.</h1>
    <h2 class="pb-4">Talk with locals, go to unique places.</h2>

    <div>
      <%= form_tag tours_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Discover tours",
          style: "width: 50%; display: inline"
        %>
        <%= submit_tag "Search" ,
        class: "btn btn-info",
        style:"width:15%; box-shadow: 0 0 15px rgba(0,0,0,0.2);"
        %>
      <% end %>
    </div>

  </div>
</div>

<div class="container">
  <div class="mt-5">
    <h2>Most popular tours</h2>
  </div>
  <div class="row mt-3">

    <% @tours.each do |tour| %>

      <div class="col-lg-3 col-md-4 col-sm-12 mt-2">

        <%= render "shared/tour_card", tour: tour %>

      </div>

    <% end %>


  </div>

  <div class="row mt-5">

    <div class="col-12 d-flex justify-content-center">

      <%= link_to "Discover all popular tours" , tours_path, class: "btn btn-outline-info pill" %>

    </div>

  </div>

</div>
