<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1500759285222-a95626b934cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container">
    <h1><strong>CITY STROLL</strong></h1>
    <p>guides you through the greatest cities of the world</p>
    <a class="btn btn-flat" <%= link_to "Discover", tours_path %></a>
  </div>
</div>

<div class="container">
  <div class="mt-5">
    <h3>All tours </h3>
  </div>
  <div class="row">
    <% @tours.each do |tour| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mt-2">
        <%= link_to "#", class: "text-decoration-none text-dark" do %>
          <div class="card-deck">
            <div class="card text-decoration-none">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1544267822-2d9ac57fc38b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3024&q=80" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= tour.name %></h5>
                <p class="card-text">in <%= tour.city %></p>
                  <p class="card-text"><small class="text-muted"><%= tour.description %></small></p>
                <div class="d-flex">
                  <p class="card-text me-2"><small class="text-muted">from: <%= tour.starting_point %></small></p>
                  <p class="card-text"><small class="text-muted">to: <%= tour.ending_point %></small></p>
                </div>
                  <p class="font-weight-bold text-right">duration: <%= tour.duration %>
                    <% if tour.duration > 1 %>
                      hours
                    <% else %>
                      hour
                    <% end %>
                  </p>
                  <p class="font-weight-bold text-right">€ <%= tour.price %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    © 2022 City Stroll </i>
    </div>
  <div class="container">
  </div>
</div>
