<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div>
        <div class="text-center mt-4">
          <h3>Hello <%= current_user.first_name %></h3>
          <h5>Your Bookings</h5>
        </div>
        <% current_user.bookings.each do |booking| %>
          <%= link_to tour_path(booking.tour), class: "text-decoration-none text-dark" do %>
            <div class="card-product mt-4">
              <img src="https://images.unsplash.com/photo-1544267822-2d9ac57fc38b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3024&q=80" />
              <div class="card-product-infos">
                <h2><%= booking.tour.name %> (<%= booking.tour.city %>)</h2>
                <p><strong>on <%= booking.start_date %></strong> </p>
                <div class="d-flex">
                  <p class="card-text me-2"><small class="text-muted">from: <%= booking.tour.starting_point %></small></p>
                  <p class="card-text"><small class="text-muted">to: <%= booking.tour.ending_point %></small></p>
                </div>
                <p>Your guide is <%= booking.tour.user.first_name %></p>
                <p>Duration: <%= booking.tour.duration %> mins </p>
                <p><%= booking.tour.users.count %> people are joining this tour</p>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
