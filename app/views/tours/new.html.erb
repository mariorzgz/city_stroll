<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new tour</h3>
        <%= simple_form_for(@tour, remote: true) do |f| %>
          <%= f.input :name, placeholder: 'e.g. Munich Walking Tour' %>
          <%= f.input :city %>
          <%= f.input :starting_point %>
          <%= f.input :ending_point %>
          <%= f.input :duration, as: :string, placeholder: 'Duration in numbers. e.g. 120' %>
          <%= f.input :description %>
          <%= f.input :price, as: :string, placeholder: 'Price in numbers as euros. e.g. 45' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-outline-info pill' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
