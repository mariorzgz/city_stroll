<div class="container">
  <p class="pt-4 pb-2"><%= link_to "Back", "#" %></p>
  <div class="pt-2 pb-4">
    <h1><%= @tour.name %></h1>
    <p><%= @tour.city %></p>
  </div>

  <div style="background-color: white; height: 70vh">
    <p>Some photos here. Maybe as a carousel</p>
  </div>

  <div class="row py-4 mb-10">

    <div class="col-8">
      <h2>Information</h2>
      <p>Your guide would be: AVATAR <%= "#{@tour.user.first_name} #{@tour.user.last_name}" %></p>
      <p><%= @tour.description %></p>
      <ul class="list-group">
        <li class="list-group-item">Starts in: <%= @tour.starting_point %></li>
        <li class="list-group-item">Ends in: <%= @tour.ending_point %></li>
        <li class="list-group-item">Duration: <%= @tour.duration %> minutes</li>
      </ul>
    </div>

    <div class="col-4">
      <h2>Make a reservation</h2>
      <p>From <%= @tour.price.round %>â‚¬ per person!</p>
      <%= render "bookings/book", tour: @tour, user: current_user, booking: Booking.new %>
    </div>
  </div>
</div>
