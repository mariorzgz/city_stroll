<div class="container">
  <div class="mt-5">
    <h3>All tours </h3>
  </div>
  <div class="row">
    <% @tours.each do |tour| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mt-2">
        <%= link_to tour_path(tour), class: "text-decoration-none text-dark" do %>
          <div class="card-deck">
            <div class="card text-decoration-none">
              <%= cl_image_tag tour.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= tour.name %></h5>
                <p class="card-text">in <%= tour.city %></p>
                  <p class="card-text"><small class="text-muted"><%= tour.description %></small></p>
                <div class="d-flex">
                  <p class="card-text me-2"><small class="text-muted">from: <%= tour.starting_point %></small></p>
                  <p class="card-text"><small class="text-muted">to: <%= tour.ending_point %></small></p>
                </div>
                  <p class="font-weight-bold text-right">duration: <%= tour.duration %>
                    <% if tour.duration > 1 %>
                      hours
                    <% else %>
                      hour
                    <% end %>
                  </p>
                  <p class="font-weight-bold text-right">â‚¬ <%= tour.price %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
