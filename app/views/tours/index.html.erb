<div class="container">

  <div class="my-4">
    <h2>Most popular tours trending</h2>
  </div>

  <div class="carousel slide" data-bs-ride="carousel">

    <div class="carousel-inner">

      <div class="carousel-item active" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@tours.first.photo.key) %>)">
        <div class="carousel-text">
          <h2><%= @tours.first.name %></h2>
          <h3><%= @tours.first.city %></h3>
          <%= link_to "From #{@tours.first.price.round} €", tour_path(@tours.first), class: "btn btn-primary stretched-link" %>
        </div>
      </div>

      <div class="carousel-item" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@tours.second.photo.key) %>)">
        <div class="carousel-text">
          <h2><%= @tours.second.name %></h2>
          <h3><%= @tours.second.city %></h3>
          <%= link_to "From #{@tours.second.price.round} €", tour_path(@tours.second), class: "btn btn-primary stretched-link" %>
        </div>
      </div>

      <div class="carousel-item" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@tours.third.photo.key) %>)">
        <div class="carousel-text">
          <h2><%= @tours.third.name %></h2>
          <h3><%= @tours.third.city %></h3>
          <%= link_to "From #{@tours.third.price.round} €", tour_path(@tours.third), class: "btn btn-primary stretched-link" %>
        </div>
      </div>

    </div>
  </div>

  <div class="mt-5 mb-4">
    <h2>All of our tours</h2>
  </div>

  <div class="row mt-3">

    <% @tours.each do |tour| %>

      <div class="col-lg-3 col-md-4 col-sm-12 mt-2 mb-4">

        <%= render "shared/tour_card", tour: tour %>

      </div>

    <% end %>

  </div>

  <div class="row mt-5">

    <div class="col-12 d-flex justify-content-center">

      <%# This is a fake button! It does nothing but looks good %>
      <%= link_to "Load more tours" , tours_path, class: "btn btn-outline-info pill" %>

    </div>

  </div>

</div>
